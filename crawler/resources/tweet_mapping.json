{
    "settings": {
        "analysis": {
          "filter": {
            "stemmer": {
              "type":     "hunspell",
              "language": "en_US" 
            }
          },
          "analyzer": {
            "lowercase_stemmed": {
              "tokenizer":  "standard",
              "filter":   ["lowercase", "stemmer"]
            }
          }
        }
    },
    "mappings": {
        "tweet": {
            "dynamic_templates": [
                {
                    "tweet_text": {
                        "match": "text",
                        "mapping": {
                            "analyzer": "lowercase_stemmed"
                        }
                    }
                },
                {
                    "default_str": {
                        "match": "*",
                        "match_mapping_type": "string",
                        "mapping": {
                            "type": "string",
                            "index": "not_analyzed",
                            "doc_values": true
                        }
                    }
                }
            ]
        }
    }
}
